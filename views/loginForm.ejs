    <body>
        <h1>Login</h1>

        <form action="/users/login" method="POST">
            <label for="username">
                Username:
                <input type="text" id="username" name="username" required> 
            </label>

            <label for="password">
                Password:
                <input type="text" name="password" id="password" required>
            </label>

            <button>Login</button>
        </form>
    </body>
</html>